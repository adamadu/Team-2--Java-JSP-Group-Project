<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.team2.workshop8.AgentDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Displaying detailed contact information for your selected agent:"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Middle Initial:"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position:"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bussiness Phone:"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgtDetailFirstName"
        android:text="asd"
        android:backgroundTint="#f3f3ff"
        android:layout_alignTop="@+id/textView10"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgtDetailMiddleInitial"
        android:layout_above="@+id/textView12"
        android:layout_alignRight="@+id/tvAgtDetailFirstName"
        android:layout_alignEnd="@+id/tvAgtDetailFirstName"
        android:text="asd"
        android:layout_alignLeft="@+id/tvAgtDetailFirstName"
        android:layout_alignStart="@+id/tvAgtDetailFirstName"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#f3f3ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgtDetailLastName"
        android:text="asd"
        android:layout_below="@+id/tvAgtDetailMiddleInitial"
        android:layout_alignLeft="@+id/tvAgtDetailMiddleInitial"
        android:layout_alignStart="@+id/tvAgtDetailMiddleInitial"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:backgroundTint="#f3f3ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgtDetailPosition"
        android:text="asd"
        android:backgroundTint="#f3f3ff"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/tvAgtDetailEmail"
        android:layout_alignStart="@+id/tvAgtDetailEmail"
        android:layout_alignRight="@+id/tvAgtDetailLastName"
        android:layout_alignEnd="@+id/tvAgtDetailLastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgtDetailEmail"
        android:text="asd"
        android:backgroundTint="#f3f3ff"
        android:layout_below="@+id/textView13"
        android:layout_toRightOf="@+id/textView11"
        android:layout_alignRight="@+id/tvAgtDetailLastName"
        android:layout_alignEnd="@+id/tvAgtDetailLastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgtDetailBusPhone"
        android:text="asd"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:backgroundTint="#f3f3ff"
        android:layout_toRightOf="@+id/tvAgtDetailMiddleInitial"
        android:layout_toEndOf="@+id/tvAgtDetailMiddleInitial" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call this Agent"
        android:id="@+id/btnCallAgent"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignParentEnd="false" />

</RelativeLayout>
