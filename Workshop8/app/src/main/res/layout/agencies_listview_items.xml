<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="2"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agency City:"
        android:id="@+id/textView2"
        android:layout_columnSpan="1"
        android:layout_rowWeight="0"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agency Address:"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgencyCity"
        android:layout_above="@+id/textView3"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Agency City" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agency Phone:"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgencyAddress"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:paddingLeft="20dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/tvAgencyCity"
        android:layout_alignStart="@+id/tvAgencyCity"
        android:layout_alignRight="@+id/tvAgencyCity"
        android:layout_alignEnd="@+id/tvAgencyCity"
        android:text="Agency Address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgencyPhone"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:paddingLeft="20dp"
        android:layout_below="@+id/tvAgencyAddress"
        android:layout_alignLeft="@+id/tvAgencyAddress"
        android:layout_alignStart="@+id/tvAgencyAddress"
        android:layout_alignRight="@+id/tvAgencyAddress"
        android:layout_alignEnd="@+id/tvAgencyAddress"
        android:text="Agency Phone" />
</RelativeLayout>